<?xml version="1.0" encoding="UTF-8"?>

<configuration content-version="3">

	<configuration-module moduleId="messaging" description="communication">

		<entry entryKey="broker-host" description="host of message broker (JMS server ActiveMQ) to connect to">
			<mustBeSet />			
		</entry>

		<entry entryKey="broker-protocol" description="protocol used to connect to message broker">
			<mustBeSet />			
		</entry>

		<entry entryKey="broker-port" description="port used to connect to message broker">
			<mustBeSet />			
		</entry>

		<entry entryKey="use-chunked-http" description="should we use chunked HTTP mode when connecting to file broker, when disabled all data is loaded to memory">
			<value>true</value>
		</entry>

		<entry entryKey="use-reliable" description="use reliable connections (ie. redialling)">
			<value>true</value>
		</entry>
		
	</configuration-module>

	<configuration-module moduleId="security" description="encryption and authentication">

		<entry entryKey="keystore" description="keystore for SSL">
			<value>${chipster_security_dir}/keystore.ks</value>
		</entry>

		<entry entryKey="master-keystore" description="master keystore for SSL">
			<value>/keystore.ks</value>
		</entry>

		<entry entryKey="keypass" description="keystore password for SSL">
			<value>microarray</value>
		</entry>

		<entry entryKey="keyalias" description="alias of key to be used for SSL">
			<value>microarray</value>
		</entry>

		<entry entryKey="username" description="username for authenticating connection to broker">
			<mustBeSet />			
		</entry>

		<entry entryKey="password" description="password for authenticating connection to broker">
			<mustBeSet />			
		</entry>
	
	</configuration-module>

	
	<configuration-module moduleId="filebroker" description="file broker">
	
		<entry entryKey="file-server-path" description="path to file broker cache directory">
			<value>file-root</value>
		</entry>
		
		<entry entryKey="file-life-time" description="how long files are stored in fileserver, seconds">
			<value>86400</value>
		</entry>

		<entry entryKey="clean-up-frequency" description="how often file cleanup check occurs, seconds">
			<value>3600</value>
		</entry>

		<entry entryKey="url" description="url of this file broker instance">
			<mustBeSet />			
		</entry>
		
        <entry entryKey="port" description="server port to use in this file broker instance">
			<mustBeSet />			
        </entry>

		<entry entryKey="jetty-debug" description="should Jetty web server run in debug mode (logs/wrapper.log)">
			<value>false</value>
		</entry>
        
	</configuration-module>


	<configuration-module moduleId="webstart" description="Java Web Start service">
	    
        <entry entryKey="port" description="server port to use in this file broker instance">
			<mustBeSet />			
        </entry>
        
    </configuration-module>
    
    
	<configuration-module moduleId="comp" description="comp service">

		<entry entryKey="work-dir" description="directory for temporary job files">
			<value>jobs-data</value>
		</entry>

		<entry entryKey="max-jobs" description="maximum number of jobs run simultaneously">
			<mustBeSet />			
		</entry>

		<entry entryKey="receive-timeout" description="time after which a received job is removed, seconds">
			<value>3600</value>
		</entry>
		
		<entry entryKey="schedule-timeout" description="time after which a scheduled job is removed if there is now response from the client, seconds">
			<value>10</value>
		</entry>
		
		<entry entryKey="custom-scripts-dir" description="directory for overriding scripts">
			<value>custom-scripts</value>
		</entry>

		<entry entryKey="include-operations" description="if specified, all but listed operations are excluded">
			<value></value>
		</entry>
		
		<entry entryKey="exclude-operations" description="if specified, listed operations are excluded">
			<value></value>
		</entry>

		<entry entryKey="sweep-work-dir" description="should job specific temporary directory be sweeped after job execution">
			<value>true</value>
		</entry>
		
		<entry entryKey="r-process-pool-size-min" description="number of processes always available if possible">
			<value>5</value>
		</entry>
		
		<entry entryKey="r-process-pool-size-max" description="max number of processes controlled by this pool (available and in use together)">
			<value>20</value>
		</entry>
		
		<entry entryKey="r-process-pool-timeout" description="timeout for waiting for a process to become available, seconds">
			<value>360</value>
		</entry>

		<entry entryKey="r-process-pool-process-use-count-max" description="used when deciding whether a process should be recycled">
			<value>10</value>
		</entry>

		<entry entryKey="r-process-pool-process-lifetime-max" description="used when deciding whether a process should be recycled, seconds">
			<value>36000</value>
		</entry>
		
		<entry entryKey="r-timeout" description="timeout for a single R script, seconds">
			<value>36000</value> <!-- 10 hours -->
		</entry>
		
		<entry entryKey="r-command" description="the command the starts R environment">
			<mustBeSet />	
		</entry>
		
		<entry entryKey="timeout-check-interval" description="receive, schedule timeout check interval, milliseconds">
			<value>1000</value>
		</entry>

