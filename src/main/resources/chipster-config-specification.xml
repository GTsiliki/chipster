	<configuration-module moduleId="manager" description="manager service">
	
		<entry entryKey="jdbc-driver" description="driver class for JDBC">
			<value>org.h2.Driver</value>
		</entry>
	
		<entry entryKey="database-url" description="URL for JDBC">
			<value>jdbc:h2:database/chipster-manager</value>
		</entry>

		<entry entryKey="database-username" description="username for JDBC">
			<value>chipster</value>
		</entry>

		<entry entryKey="database-password" description="password for JDBC">
			<value></value>
		</entry>

		<entry entryKey="start-web-console" description="is web console enabled">
			<value>true</value>
		</entry>

		<entry entryKey="web-console-port" description="HTTP port for web console">
			<mustBeSet />			
		</entry>
		
		<entry entryKey="backup-dir" description="directory where backups are stored">
			<value>database-backups</value>
		</entry>
		
		<entry entryKey="backup-time" description="">
			<value>00:05</value>
		</entry>
		
		<entry entryKey="backup-interval" description="backup interval in hours">
			<value>24</value>
		</entry>
			
	</configuration-module>
	
	
	<configuration-module moduleId="client" description="client constants">

		<entry entryKey="max-jobs" description="maximum job count">
			<value>10</value>
		</entry>
		
		<entry entryKey="max-job-size" description="maximum job size in bytes">
			<value>5368709120</value> <!-- 5 gigabytes -->
		</entry>

	</configuration-module>
	

</configuration>