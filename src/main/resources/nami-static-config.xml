<?xml version="1.0" encoding="UTF-8"?>

<!-- NAMI uses Obix configuration file format -->

<configuration>


	<configuration-module moduleId="client">

		<!-- maximum job count -->
		<entry entryKey="max_jobs">
			<value>10</value>
		</entry>

		<!-- maximum job size in bytes (5 gigabytes) -->
		<entry entryKey="max_job_size">
			<value>5368709120</value>
		</entry>

	</configuration-module>

	
	<configuration-module moduleId="messaging">

		<!-- use reliable connections (ie. redialling) -->
		<entry entryKey="use_reliable">
			<value>true</value>
		</entry>

		<!-- cache payloads on the server side -->
		<entry entryKey="cache_payloads">
			<value>true</value>
		</entry>


	</configuration-module>
	
	<configuration-module moduleId="analyser">
	
		<!-- should be removed -->
		<entry entryKey="max_inputs">
			<value>50</value>
		</entry>
		
		<!-- receive, schedule timeout check interval, milliseconds-->
		<entry entryKey="timeout_check_interval">
			<value>1000</value>
		</entry>

		
		
		<!-- timeout (max running time for job) -->
		<entry entryKey="timeout_sec">
			<value>480</value> <!-- 8 hours -->
		</entry>
		
		<!-- analysis handlers (ie. supported analysis types) -->
		<!-- the more common types should come first as the order matters when searching  -->
		<!-- for a handler for particular analysis -->
		<entry entryKey="analysis_handlers">
			<value>fi.csc.microarray.analyser.r.RAnalysisHandler</value>
			<value>fi.csc.microarray.analyser.java.JavaAnalysisHandler</value>
		</entry>
		
